<div id='ticket'>
  <h2><%= @ticket.title %></h2>
  <span id="author">Created by <%= @ticket.user.name %></span>

  <%= simple_format(@ticket.description) %>
  
  <% if @ticket.asset.present? %>
  <h3>Attached File</h3>
  <div class="asset">
    <p>
      <%= link_to File.basename(@ticket.asset.path), @ticket.asset.url %>
    </p>
    <p>
      <small><%= number_to_human_size(@ticket.asset.size) %>
    </p>
  </div>
  <% end %>

  <p>
  <% authorized?(:edit_tickets, @project) do %>
    <%= link_to "Edit Ticket", [:edit, @project, @ticket] %>
  <% end %>

  <% authorized?(:delete_tickets, @project) do %>
    <%= link_to "Delete Ticket", [@project, @ticket],
                method: :delete,
                data: { confirm: "Are you sure you want to delete this ticket?" }
     %>
  <% end %>
  </p>
</div>